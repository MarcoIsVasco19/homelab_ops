node_name        = "pve01"
proxmox_endpoint = "https://<INSERT-PVE-IP>:8006/"

# Your storage split
snippets_datastore_id = "local"
vm_datastore_id       = "local-lvm"
bridge                = "vmbr0"

# Manually prepared openSUSE Leap Micro 6.2 image in local import storage
base_image_import_from = "local:import/openSUSE-Leap-Micro.x86_64-Default-qcow.qcow2"

# Cloud-init files live in ./cloud-init and are synced to Proxmox snippets
# with: ./scripts/sync-cloud-init.sh --host <INSERT-PVE-IP>
nodes = {
  cp1 = {
    vm_id     = 201,
    hostname  = "k8s-cp-01",
    cores     = 2,
    memory_mb = 4096,
    tags      = ["k8s", "cp"],
    disk_gb   = 32,

    user_data_file_id = "local:snippets/k8s-cp-01-userdata.yaml"
  }
