#!/usr/bin/env bash

# Load local secrets/overrides if present.
source_env_if_exists .envrc.local

# Optional defaults (safe to commit)
export AWS_REGION="${AWS_REGION:-eu-central-1}"

# Keep OpenTofu from trying EC2 metadata in local shells.
export AWS_EC2_METADATA_DISABLED=true

# Helpful command shortcuts in this directory.
alias tfinit='tofu init -migrate-state'
alias tfplan='tofu plan'
alias tfapply='tofu apply'
