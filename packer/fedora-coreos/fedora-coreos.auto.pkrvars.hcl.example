# Upstream Fedora CoreOS stable qemu image.
# You can set this to a local file path as well (for example: file:///tmp/fcos.qcow2).
fedora_coreos_image_url = "https://builds.coreos.fedoraproject.org/prod/streams/stable/builds/43.20260202.3.1/x86_64/fedora-coreos-43.20260202.3.1-proxmoxve.x86_64.qcow2.xz"

# Replace with the published checksum for the exact image URL above.
fedora_coreos_image_checksum = "sha256:470585282dd6e1c94fab18eac0313b2b0b708920f0898cd6d8259de73c9df721"

# Your personal SSH key pair.
ssh_public_key_file  = "~/.ssh/personal-github.pub"
ssh_agent_auth       = true

# Optional when ssh_agent_auth = false.
ssh_private_key_file = ""

# Optional overrides.
vm_name          = "fedora-coreos-golden"
ssh_username     = "core"
cpus             = 2
memory           = 2048
disk_size        = "20G"
headless         = true
output_directory = "output"
