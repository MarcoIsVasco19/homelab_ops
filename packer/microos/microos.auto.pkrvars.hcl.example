# Upstream SUSE MicroOS cloud image (qcow2).
microos_image_url = "https://download.opensuse.org/tumbleweed/appliances/openSUSE-MicroOS.x86_64-kvm-and-xen.qcow2"

# Replace with the published checksum for the exact image URL above.
microos_image_checksum = "sha256:REPLACE_ME"

# Your personal SSH key pair.
ssh_public_key_file  = "~/.ssh/id_ed25519.pub"
ssh_agent_auth       = true

# Optional when ssh_agent_auth = false.
ssh_private_key_file = ""

# Optional overrides.
vm_name          = "microos-golden"
ssh_username     = "ops"
cpus             = 2
memory           = 2048
disk_size        = "20G"
headless         = true
output_directory = "output"
